<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53C4E6"
    tools:context=".EditProfileUserActivity">

    <ImageButton
        android:id="@+id/btnBack_ProfileDetail"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#53C4E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="93dp"
        android:text="Thông tin tài khoản"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="375dp"
        android:layout_height="400dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_reset_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <EditText
            android:id="@+id/etEmail_ProfileDetail"
            android:layout_width="260dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#1347B7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNgaySinh_ProfileDetails" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="56dp"
            android:text="Email:"
            android:textAlignment="center"
            android:textColor="#1347B7"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/btnUpdate_ProfileDetail"
            android:layout_width="332dp"
            android:layout_height="55dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#AC8E8E"
            android:text="Cập nhật"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail_ProfileDetail" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="56dp"
            android:text="Ngày sinh:"
            android:textAlignment="center"
            android:textColor="#1347B7"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/etNgaySinh_ProfileDetails"
            android:layout_width="260dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_edit_calendar"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#1347B7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName_ProfileDetails" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="49dp"
            android:text="Tài khoản:"
            android:textAlignment="center"
            android:textColor="#1347B7"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etName_ProfileDetails"
            android:layout_width="260dp"
            android:layout_height="51dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_assignment_ind"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#1347B7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>