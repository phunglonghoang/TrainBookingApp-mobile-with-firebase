<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="530dp"
    android:background="@drawable/bg_dialog_infor_user"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/btnXoa_DialogInforTD"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#BF3636"
        android:text="Xóa"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etTGDiChuyen_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Thời gian di chuyển"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGioXuatPhat_DialogInforTD" />

    <EditText
        android:id="@+id/etGioXuatPhat_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:focusable="false"
        android:hint="Giờ xuất phát"
        android:inputType="none"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGiaVeGheNgoi_DialogInforTD" />

    <EditText
        android:id="@+id/etGiaVeGheNgoi_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Giá vé ghế ngồi"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGiaVeGiuongNam_DialogInforTD" />

    <EditText
        android:id="@+id/etGiaVeGiuongNam_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Giá vé giường nằm"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSLGhe_DialogInforTD" />

    <AutoCompleteTextView
        android:id="@+id/atGaDen_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Ga đến"
        android:inputType="none"
        android:focusable="false"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atGaDi_DialogInforTD" />

    <AutoCompleteTextView
        android:id="@+id/atGaDi_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Ga đi"
        android:inputType="none"
        android:focusable="false"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSLGhe_DialogInforTD"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Số lượng ghế"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atGaDen_DialogInforTD" />

    <Button
        android:id="@+id/btnSua_DialogInforTD"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#254591"
        android:text="Sửa"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTTOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="10dp"
        android:text="Thông tin tuyến đường"
        android:textColor="#1753AA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClose_DialogThanhToan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_dialog_infor_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />


</androidx.constraintlayout.widget.ConstraintLayout>