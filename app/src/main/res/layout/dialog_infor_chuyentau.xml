<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="330dp"
    android:background="@drawable/bg_dialog_infor_user"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/etGioXuatPhat_DialogInforCT"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="Giờ xuất phát"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTienThanhToan_DialogThanhToan" />

    <EditText
        android:id="@+id/etNgayKhoiHanh_DialogInforCT"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_edit_calendar"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="Ngày khởi hành"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGioXuatPhat_DialogInforCT" />

    <Button
        android:id="@+id/btnXoa_DialogInforCT"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#BF3636"
        android:text="Hủy chuyến tàu"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSua_DialogInforCT"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4346EA"
        android:text="Đổi ngày khởi hành"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTTOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="10dp"
        android:text="Thông tin chuyến tàu"
        android:textColor="#1753AA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClose_DialogThanhToan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_dialog_infor_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <EditText
        android:id="@+id/etTienThanhToan_DialogThanhToan"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="Tên chuyến tàu"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClose_DialogThanhToan" />


</androidx.constraintlayout.widget.ConstraintLayout>